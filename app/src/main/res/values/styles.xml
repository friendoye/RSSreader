<resources>

    <style name="AppTheme" parent="AppTheme.Base">
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/orange_500</item>
        <item name="colorPrimaryDark">@color/orange_700</item>
    </style>

    <style name="FullscreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="TextAppearance.Body1" parent="android:TextAppearance.Medium">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.Caption" parent="android:TextAppearance.Small">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.Title" parent="android:TextAppearance.Large">
        <item name="android:textSize">20sp</item>
    </style>

</resources>
