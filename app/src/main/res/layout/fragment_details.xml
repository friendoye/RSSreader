<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollView"
    tools:context="com.friendoye.rss_reader.fragments.DetailsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_text"
            android:textAppearance="@style/TextAppearance.Title"
            android:id="@+id/titleView"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pub_date_text"
            android:textAppearance="@style/TextAppearance.Caption"
            android:gravity="right"
            android:id="@+id/publicationView"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:minHeight="@dimen/image_height"
            android:layout_marginTop="@dimen/image_margin"
            android:layout_marginBottom="@dimen/image_margin"
            android:id="@+id/imageView"
            android:adjustViewBounds="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/description_text"
            android:textAppearance="@style/TextAppearance.Body1"
            android:id="@+id/descriptionView"/>

    </LinearLayout>

</ScrollView>