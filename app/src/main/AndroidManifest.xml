<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.friendoye.rss_reader" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- HockeyApp uses it for gaining statistics -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:name=".Application"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:name=".activities.WelcomeActivity"
            android:noHistory="true"
            android:theme="@style/FullscreenTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.RssFeedActivity"
            android:label="@string/title_activity_rss_feed" >
        </activity>

        <activity
            android:name=".activities.DetailsActivity"
            android:label="@string/title_activity_details"
            android:parentActivityName=".activities.RssFeedActivity" >

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.friendoye.rss_reader.activities.RssFeedActivity" />

        </activity>

        <activity android:name="net.hockeyapp.android.UpdateActivity" />

    </application>

</manifest>
