<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.friendoye.rss_reader" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- HockeyApp uses it for gaining statistics + disk cache -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:name=".Application"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!-- TODO: Unlock all orientations -->

        <activity
            android:name="com.friendoye.rss_reader.ui.welcome.WelcomeActivity"
            android:noHistory="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.RssFeedActivity"
            android:label="@string/title_activity_rss_feed"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".ui.DetailsActivity"
            android:label="@string/title_activity_details"
            android:parentActivityName=".ui.RssFeedActivity"
            android:screenOrientation="portrait">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.friendoye.rss_reader.ui.RssFeedActivity" />

        </activity>

        <activity
            android:name="net.hockeyapp.android.UpdateActivity"
            android:screenOrientation="portrait"/>

    </application>

</manifest>
